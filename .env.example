# ===========================================
# ENVIRONMENT VARIABLES - EVAonline
# ===========================================
# NUNCA commite o arquivo .env no reposit√≥rio!

# === ENVIRONMENT ===
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# === POSTGRES CONFIGURATION ===
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=eva_online
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=0
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=3600

# === REDIS CONFIGURATION ===
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# === CELERY CONFIGURATION ===
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=America/Sao_Paulo
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# === FASTAPI CONFIGURATION ===
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4
FASTAPI_RELOAD=false
API_V1_PREFIX=/api/v1
API_TITLE=EVAonline API
API_VERSION=1.0.0

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8050"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# === DASH CONFIGURATION ===
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=false
DASH_DEV_TOOLS_HOT_RELOAD=false

# === NGINX CONFIGURATION ===
NGINX_PORT=80

# === PROMETHEUS CONFIGURATION ===
PROMETHEUS_PORT=9090

# === GRAFANA CONFIGURATION ===
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# === LOGGING ===
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_JSON=false
LOG_ROTATION=00:00
LOG_RETENTION=30 days
LOG_COMPRESSION=zip

# === CLIMATE APIs ===
NASA_POWER_BASE_URL=https://power.larc.nasa.gov/api/
NASA_POWER_TIMEOUT=30
MET_NORWAY_BASE_URL=https://api.met.no/
MET_NORWAY_USER_AGENT=EVAonline/1.0 (your-email@example.com)
OPENMETEO_BASE_URL=https://api.open-meteo.com/v1/
NWS_BASE_URL=https://api.weather.gov/
CLIMATE_CACHE_ENABLED=true
CLIMATE_CACHE_EXPIRE=3600

# === OPENSTREETMAP CACHE ===
OSM_TILE_CACHE_DIR=/tmp/osm_tiles
OSM_TILE_CACHE_SIZE=1000

# === APPLICATION SECRETS ===
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_SECRET_KEY=your_jwt_secret_here

# === PATHS ===
TIMEZONE=America/Sao_Paulo
DATA_DIR=data
TEMP_DIR=temp

# === EXTERNAL APIS ===
NASA_POWER_API_KEY=your_nasa_power_api_key
OPENMETEO_API_KEY=your_openmeteo_api_key
